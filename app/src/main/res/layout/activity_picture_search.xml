<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_picture_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="plapp.plapp.PictureSearch">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:elevation="@dimen/text_marginTop"
                android:max="100"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:id="@+id/rel1"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:focusableInTouchMode="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tst1"
                    android:paddingTop="2dp"
                    android:text="RESULT 1"
                    android:lines="1"
                    android:focusableInTouchMode="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:clickable="true"
                    android:textColor="#C1C1C1"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6caf1d"
                    android:lines="1"
                    android:layout_marginTop="50dp"
                    android:id="@+id/matchRes1"
                    android:text="@string/large_text"
                    android:layout_below="@+id/txtRes1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:gravity="right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRes1"
                    android:paddingTop="2dp"
                    android:text="Place Holder"
                    android:lines="1"
                    android:focusableInTouchMode="true"
                    android:textColor="#6caf1d"

                    android:textAppearance="?android:textAppearanceLarge"
                    android:clickable="true"
                    android:layout_below="@+id/imgRes1"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:lines="3"
                    android:id="@+id/charRes1"
                    android:text="@string/large_text"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:layout_below="@+id/txtRes1"
                    android:layout_alignStart="@+id/txtRes1" />

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:id="@+id/imgRes1"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_below="@+id/tst1"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:id="@+id/rel2"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:focusableInTouchMode="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tst2"
