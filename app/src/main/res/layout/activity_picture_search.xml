                    android:lines="1"
                    android:focusableInTouchMode="true"
                    android:textColor="#6caf1d"

                    android:textAppearance="?android:textAppearanceLarge"
                    android:clickable="true"
                    android:layout_below="@+id/imgRes2"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:lines="3"
                    android:id="@+id/charRes2"
                    android:text="@string/large_text"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:layout_below="@+id/txtRes2"
                    android:layout_alignStart="@+id/txtRes2" />

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:id="@+id/imgRes2"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_below="@+id/tst2"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:id="@+id/rel3"
                android:clickable="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:focusableInTouchMode="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tst3"
                    android:paddingTop="2dp"
                    android:text="RESULT 3"
                    android:lines="1"
                    android:focusableInTouchMode="true"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:clickable="true"
                    android:textColor="#C1C1C1"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6caf1d"
                    android:lines="1"
                    android:layout_marginTop="50dp"
                    android:id="@+id/matchRes3"
                    android:text="@string/large_text"
                    android:layout_below="@+id/txtRes3"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:gravity="right"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtRes3"
                    android:paddingTop="2dp"
                    android:text="Place Holder"
                    android:lines="1"
                    android:focusableInTouchMode="true"
                    android:textColor="#6caf1d"

                    android:textAppearance="?android:textAppearanceLarge"
                    android:clickable="true"
                    android:layout_below="@+id/imgRes3"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"
                    android:lines="3"
                    android:id="@+id/charRes3"
                    android:text="@string/large_text"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:layout_below="@+id/txtRes3"
                    android:layout_alignStart="@+id/txtRes3" />

                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:id="@+id/imgRes3"
                    android:clickable="true"
                    android:focusableInTouchMode="true"
                    android:layout_below="@+id/tst3"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>
