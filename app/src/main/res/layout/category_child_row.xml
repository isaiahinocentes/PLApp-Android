<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rel"
        android:clickable="true"
        android:focusableInTouchMode="true"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:id="@+id/child_icon"
            android:clickable="true"
            android:focusableInTouchMode="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/child_text"
            android:layout_marginLeft="95sp"
            android:paddingTop="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/child_icon"
            android:text="Place Holder"
            android:lines="1"
            android:focusableInTouchMode="true"
            android:textColor="#6caf1d"
            android:paddingBottom="5dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:clickable="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:lines="2"
            android:id="@+id/child_charac1"
            android:text="@string/large_text"
            android:layout_marginLeft="95dp"
            android:layout_below="@+id/child_text"
            android:textSize="12sp"
            android:ellipsize="end"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dcdcdc"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="1dp"
            android:layout_below="@+id/child_charac1"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</ScrollView>