<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="plapp.plapp.MainActivity"
    android:background="#f1f1f1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/v_logo"
            android:src="@drawable/ui_logo"
            android:layout_weight="1"
            android:layout_marginTop="62dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        tools:ignore="RtlHardcoded">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/btnMS"
            android:background="@drawable/xml_mainbuttons"
            android:src="@drawable/ui_btn_search"
            android:layout_marginLeft="25dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:onClick="ManualSearch" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_marginTop="83dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/btnPS"
            android:src="@drawable/ui_btn_camm"
            android:background="@drawable/xml_mainbuttons"
            android:layout_marginLeft="25dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            tools:ignore="RtlHardcoded"
            android:onClick="Camera" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/btnGallery"
            android:src="@drawable/ui_btn_gall"
            android:onClick="Gallery"
            android:background="@drawable/xml_mainbuttons"
            android:layout_marginLeft="0dp"
            android:padding="0dp"
            android:scaleType="fitCenter"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

</RelativeLayout>
